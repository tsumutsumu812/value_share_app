<% if flash[:error_messages]  %>
  <div class="alert alert-danger">
    <ul>
      <% flash[:error_messages].each do |msg|  %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: value do |f| %>
    <div class = "form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-controll' %>
    </div>
    <div class = "form-group" >
        <%= f.label :content, '価値観' %>
        <%= f.text_area :content, class: 'form-controll', rows: 10 %>
    </div>
    <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>